<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".PostActivity">

    <include
        android:id="@+id/toolbarPostUpdatePost"
        layout = "@layout/app_bar_layout"/>
    
    <ImageButton
        android:id="@+id/imageButtonPostPostImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_below="@id/toolbarPostUpdatePost"
        android:layout_marginTop="20dp"
        android:src="@drawable/select_image"/>

    <EditText
        android:id="@+id/editTextPostPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write something about your image..."
        android:layout_below="@+id/imageButtonPostPostImage"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:padding="15dp"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/buttonPostUpdatePost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPostPostDescription"
        android:text="Update Post"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"/>


</RelativeLayout>