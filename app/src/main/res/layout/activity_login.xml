<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login">

    <ImageView
        android:id="@+id/imageViewLoginLogo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/logo"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        />
    <EditText
        android:id="@+id/editTextLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email..."
        android:layout_below="@+id/imageViewLoginLogo"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:drawableStart="@drawable/email"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/editTextLoginPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password..."
        android:layout_below="@+id/editTextLoginEmail"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:drawableStart="@drawable/password"
        android:layout_marginTop="5dp"/>
    <Button
        android:id="@+id/buttonLoginAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/editTextLoginPass"
        android:background="@drawable/button"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textViewLoginCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLoginAccount"
        android:layout_marginTop="10dp"
        android:text="Don't have an account? Need new account..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textViewLoginAlternative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLoginCreateAccount"
        android:text="or login with..."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewLoginAlternative">

        <ImageView
            android:id="@+id/imageViewLoginFacebook"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/facebook"/>
        <ImageView
            android:id="@+id/imageViewLoginTwitter"
            android:layout_width="125dp"
            android:layout_height="105dp"
            android:src="@drawable/twitter"/>
        <ImageView
            android:id="@+id/imageViewLoginGoogle"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:src="@drawable/google"/>
    </LinearLayout>

</RelativeLayout>